{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./api",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true
  },
  "include": ["api/**/*", "api/index.ts"],
  "exclude": ["node_modules", "dist"]
}